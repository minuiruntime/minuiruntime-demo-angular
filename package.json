{
  "name": "minuiruntime-demo-angular",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "prebuild": "mkdir -p src/assets/wasm && cp node_modules/@minuiruntime/minui_rt/minui_rt_bg.wasm src/assets/wasm/",
    "prestart": "mkdir -p src/assets/wasm && cp node_modules/@minuiruntime/minui_rt/minui_rt_bg.wasm src/assets/wasm/",
    "start": "ng serve",
    "build": "ng build && npm run postbuild",
    "postbuild": "test -d docs/browser && cp -r docs/browser/* docs/ && rm -rf docs/browser || true",
    "watch": "ng build --watch --configuration development",
    "test": "jasmine --config=jasmine.json",
    "test:karma": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@minuiruntime/minui_rt": "^0.1.8",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/material": "^20.2.14",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "jasmine": "^5.12.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "rxjs": "^7.8.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "zone.js": "^0.15.1"
  }
}
